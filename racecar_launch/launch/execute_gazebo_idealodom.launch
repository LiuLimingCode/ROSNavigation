<?xml version="1.0"?>

<launch>

  <arg name="robot_name" default="racecar"/>

  <!-- topic and frame -->
  <arg name="scan_topic" default="/$(arg robot_name)/laser/scan"/>
  <arg name="cmd_topic" default="/$(arg robot_name)/cmd_vel"/>
  <arg name="imu_topic" default="/$(arg robot_name)/imu/data"/>
  <arg name="map_topic" default="/$(arg robot_name)/map"/>
  <arg name="odom_topic" default="/$(arg robot_name)/odom"/>
  <arg name="base_frame" default="$(arg robot_name)/base_link"/>
  <arg name="map_frame" default="$(arg robot_name)/map"/>
  <arg name="odom_frame" default="$(arg robot_name)/odom"/>
  <arg name="imu_frame" default="$(arg robot_name)/imu_link"/>
  <arg name="laser_frame" default="$(arg robot_name)/laser_link"/>

  <!-- launch option -->
  <arg name="simulator" default="false"/>
  <arg name="gmapping" default="false"/>
  <arg name="savemap" default="false"/>
  <arg name="navigation" default="false"/>
  <arg name="lmnavigation" default="false"/>

  <!-- simulator -->
  <group if="$(arg simulator)">
    <include file="$(find racecar_simulator)/launch/racecar_gazebo.launch">
      <arg name="robot_name" default="$(arg robot_name)"/>
      <arg name="enable_odom_tf" default="true"/>
      <arg name="odom_frame" default="odom"/><!---->
      <arg name="odom_topic" default="odom"/><!---->
      <arg name="robot_namespace" default="$(arg robot_name)"/>
    </include>
  </group>


  <group ns="$(arg robot_name)">

    <!-- gmapping -->
    <group if="$(arg gmapping)">
      <include file="$(find racecar_launch)/launch/run_gmapping.launch">
        <arg name="scan_topic" default="$(arg scan_topic)"/>
        <arg name="base_frame" default="$(arg base_frame)"/>
        <arg name="map_frame" default="$(arg map_frame)"/>
        <arg name="odom_frame" default="$(arg odom_frame)"/>
      </include>
    </group>


    <!-- savemap -->
    <group if="$(arg savemap)">
      <arg name="mapfile_name" default="racetrack"/>
      <node pkg="map_server" type="map_saver" name="map_saver" args="-f $(find racecar_launch)/map/$(arg mapfile_name).rviz"/>
    </group>


    <!-- navigation -->
    <group if="$(arg navigation)">
      <arg name="mapfile_name" default="racetrack"/>
      <include file="$(find racecar_launch)/launch/run_navigation.launch">
        <arg name="map_topic" default="$(arg map_topic)"/>
        <arg name="scan_topic" default="$(arg scan_topic)"/>
        <arg name="cmd_topic" default="$(arg cmd_topic)"/>
        <arg name="odom_topic" default="$(arg odom_topic)"/>
        <arg name="laser_frame" default="$(arg laser_frame)"/>
        <arg name="base_frame" default="$(arg base_frame)"/>
        <arg name="map_frame" default="$(arg map_frame)"/>
        <arg name="odom_frame" default="$(arg odom_frame)"/>
        <arg name="mapfile_name" default="$(arg mapfile_name)"/>
        <arg name="nav_mode" default="true"/>
      </include>
    </group>


    <!-- slam and navigation -->
    <group if="$(arg lmnavigation)">
      <include file="$(find racecar_launch)/launch/run_navigation.launch">
        <arg name="map_topic" default="$(arg map_topic)"/>
        <arg name="scan_topic" default="$(arg scan_topic)"/>
        <arg name="cmd_topic" default="$(arg cmd_topic)"/>
        <arg name="odom_topic" default="$(arg odom_topic)"/>
        <arg name="laser_frame" default="$(arg laser_frame)"/>
        <arg name="base_frame" default="$(arg base_frame)"/>
        <arg name="map_frame" default="$(arg map_frame)"/>
        <arg name="odom_frame" default="$(arg odom_frame)"/>
        <arg name="mapfile_name" default="$(arg mapfile_name)"/>
        <arg name="lmn_mode" default="true"/>
      </include>
    </group>

  </group>

  <!-- rviz -->
  <arg name="rviz_base" default="false"/>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find racecar_launch)/rviz/racecar_gazebo_odometry_base.rviz" if="$(arg rviz_base)">
    <remap from="/move_base_simple/goal" to="/$(arg robot_name)/move_base_simple/goal"/>
    <remap from="/initialpose" to="/$(arg robot_name)/initialpose"/>
  </node>

  <arg name="rviz_full" default="false"/>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find racecar_launch)/rviz/racecar_gazebo_odometry_full.rviz" if="$(arg rviz_full)">
    <remap from="/move_base_simple/goal" to="/$(arg robot_name)/move_base_simple/goal"/>
    <remap from="/initialpose" to="/$(arg robot_name)/initialpose"/>
  </node>

</launch>
