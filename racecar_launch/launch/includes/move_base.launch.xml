<?xml version="1.0"?>

<launch>

  <arg name="odom_topic"/>
  <arg name="cmd_topic"/>
  <arg name="scan_topic"/>
  <arg name="map_topic"/>
  <arg name="laser_frame"/>
  <arg name="map_frame"/>
  <arg name="odom_frame"/>
  <arg name="base_frame"/>

  <arg name="origin_x" default="0.0"/>
  <arg name="origin_y" default="0.0"/>

  <arg name="speed_fast" default="false"/>

  <!-- costmap: http://wiki.ros.org/costmap_2d -->
  <!-- global_planner: http://wiki.ros.org/global_planner -->
  <!-- local_planner: http://wiki.ros.org/teb_local_planner -->

  <group if="$(arg speed_fast)">
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">

      <remap from="/cmd_vel" to="$(arg cmd_topic)"/>
      <remap from="/map" to="$(arg map_topic)"/>

      <!-- global planner -->
      <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
      <!--param name="base_global_planner" value="navfn/NavfnROS"/-->
      <!--param name="base_global_planner" value="carrot_planner/CarrotPlanner"/-->

      <!-- local planner -->
      <!--param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/-->
      <!--param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/-->
      <!--param name="base_local_planner" value="eband_local_planner/EBandPlannerROS"/-->
      <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS"/>

      <param name="planner_frequency" value="20.0"/>
      <param name="planner_patience" value="5.0"/>

      <param name="controller_frequency" value="20.0"/>
      <param name="controller_patience" value="15.0"/>

      <param name="clearing_rotation_allowed" value="false" />

      <rosparam file="$(find racecar_launch)/param/move_base_fast/costmap_common_params_fast.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find racecar_launch)/param/move_base_fast/costmap_common_params_fast.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find racecar_launch)/param/move_base_fast/local_costmap_params_fast.yaml" command="load" />
      <rosparam file="$(find racecar_launch)/param/move_base_fast/global_costmap_params_fast.yaml" command="load" />
      <rosparam file="$(find racecar_launch)/param/move_base_fast/teb_local_planner_params_fast.yaml" command="load" />

      <param name="TebLocalPlannerROS/odom_topic" value="$(arg odom_topic)"/>

      <param name="global_costmap/origin_x" value="$(arg origin_x)"/>
      <param name="global_costmap/origin_y" value="$(arg origin_y)"/>
      <param name="global_costmap/global_frame" value="$(arg map_frame)"/>
      <param name="global_costmap/robot_base_frame" value="$(arg base_frame)"/>
      <param name="local_costmap/origin_x" value="$(arg origin_x)"/>
      <param name="local_costmap/origin_y" value="$(arg origin_y)"/>
      <param name="local_costmap/global_frame" value="$(arg map_frame)"/>
      <param name="local_costmap/robot_base_frame" value="$(arg base_frame)"/>

    </node>
  </group>



  <group unless="$(arg speed_fast)">
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">

      <remap from="/cmd_vel" to="$(arg cmd_topic)"/>
      <remap from="/map" to="$(arg map_topic)"/>

      <!-- global planner -->
      <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
      <!--param name="base_global_planner" value="navfn/NavfnROS"/-->
      <!--param name="base_global_planner" value="carrot_planner/CarrotPlanner"/-->

      <!-- local planner -->
      <!--param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/-->
      <!--param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/-->
      <!--param name="base_local_planner" value="eband_local_planner/EBandPlannerROS"/-->
      <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS"/>

      <param name="planner_frequency" value="20.0"/>
      <param name="planner_patience" value="5.0"/>

      <param name="controller_frequency" value="20.0"/>
      <param name="controller_patience" value="15.0"/>

      <param name="clearing_rotation_allowed" value="false" />

      <rosparam file="$(find racecar_launch)/param/move_base_slow/costmap_common_params_slow.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find racecar_launch)/param/move_base_slow/costmap_common_params_slow.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find racecar_launch)/param/move_base_slow/local_costmap_params_slow.yaml" command="load" />
      <rosparam file="$(find racecar_launch)/param/move_base_slow/global_costmap_params_slow.yaml" command="load" />
      <rosparam file="$(find racecar_launch)/param/move_base_slow/teb_local_planner_params_slow.yaml" command="load" />

      <param name="TebLocalPlannerROS/odom_topic" value="$(arg odom_topic)"/>

      <param name="global_costmap/origin_x" value="$(arg origin_x)"/>
      <param name="global_costmap/origin_y" value="$(arg origin_y)"/>
      <param name="global_costmap/global_frame" value="$(arg map_frame)"/>
      <param name="global_costmap/robot_base_frame" value="$(arg base_frame)"/>
      <param name="local_costmap/origin_x" value="$(arg origin_x)"/>
      <param name="local_costmap/origin_y" value="$(arg origin_y)"/>
      <param name="local_costmap/global_frame" value="$(arg map_frame)"/>
      <param name="local_costmap/robot_base_frame" value="$(arg base_frame)"/>

    </node>
  </group>


</launch>
