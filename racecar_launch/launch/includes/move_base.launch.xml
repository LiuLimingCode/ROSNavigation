<?xml version="1.0"?>

<launch>

  <arg name="odom_topic"/>
  <arg name="cmd_topic"/>
  <arg name="scan_topic"/>
  <arg name="map_topic"/>
  <arg name="laser_frame"/>
  <arg name="map_frame"/>
  <arg name="odom_frame"/>
  <arg name="base_frame"/>

  <arg name="origin_x" default="0.0"/>
  <arg name="origin_y" default="0.0"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">

    <!-- global planner -->
    <!--param name="base_global_planner" value="global_planner/GlobalPlanner"/-->
    <!--param name="base_global_planner" value="navfn/NavfnROS"/-->
    <!--param name="base_global_planner" value="carrot_planner/CarrotPlanner"/-->

    <!-- local planner -->
    <!--param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/-->  
    <!--param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/-->
    <!--param name="base_local_planner" value="eband_local_planner/EBandPlannerROS"/-->  
    <!--param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS"/-->  

    <!--rosparam file="$(find racecar_launch)/param/move_base/NavfnROS.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/move_base/move_base.yaml" command="load"/-->
    <!--rosparam file="$(find racecar_launch)/param/move_base/dwa_local_planner.yaml" command="load"/-->
    <!--rosparam file="$(find racecar_launch)/param/move_base/base_local_planner.yaml" command="load"/-->

    <!--rosparam file="$(find racecar_launch)/param/move_base/teb_local_planner.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/move_base/common_costmap.yaml" command="load" ns="global_costmap"/> 
    <rosparam file="$(find racecar_launch)/param/move_base/common_costmap.yaml" command="load" ns="local_costmap"/> 
    <rosparam file="$(find racecar_launch)/param/move_base/local_costmap.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/move_base/global_costmap.yaml" command="load"/>

    <param name="global_costmap/laser_scan_sensor/sensor_frame" value="$(arg laser_frame)"/>
    <param name="global_costmap/laser_scan_sensor/topic" value="$(arg scan_topic)"/>
    <param name="global_costmap/global_frame" value="$(arg map_frame)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame)"/>
    <param name="global_costmap/origin_x" value="$(arg origin_x)"/>
    <param name="global_costmap/origin_y" value="$(arg origin_y)"/>

    <param name="local_costmap/laser_scan_sensor/sensor_frame" value="$(arg laser_frame)"/>
    <param name="local_costmap/laser_scan_sensor/topic" value="$(arg scan_topic)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame)"/>
    <param name="local_costmap/origin_x" value="$(arg origin_x)"/>
    <param name="local_costmap/origin_y" value="$(arg origin_y)"/-->

    <rosparam file="$(find racecar_launch)/param/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find racecar_launch)/param/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find racecar_launch)/param/move_base/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find racecar_launch)/param/move_base/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find racecar_launch)/param/move_base/teb_local_planner_params.yaml" command="load" />

    <param name="global_costmap/origin_x" value="$(arg origin_x)"/>
    <param name="global_costmap/origin_y" value="$(arg origin_y)"/>
    <param name="local_costmap/origin_x" value="$(arg origin_x)"/>
    <param name="local_costmap/origin_y" value="$(arg origin_y)"/>

    <param name="base_global_planner" value="global_planner/GlobalPlanner" />
    <param name="planner_frequency" value="0.01" />
    <param name="planner_patience" value="5.0" />
    <!--param name="use_dijkstra" value="false" /-->
    
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <param name="controller_frequency" value="5.0" />
    <param name="controller_patience" value="15.0" />

    <param name="clearing_rotation_allowed" value="false" />
       
  </node>

</launch>
