<?xml version="1.0"?>

<launch>

  <arg name="odom_frame"/>
  <arg name="cmd_topic"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <remap from="odom" to="$(arg odom_frame)"/>
    <remap from="cmd_vel" to="$(arg cmd_topic)"/>

    <!-- global planner -->
    <!--param name="base_global_planner" value="global_planner/GlobalPlanner"/-->
    <param name="base_global_planner" value="navfn/NavfnROS"/>
    <!--param name="base_global_planner" value="carrot_planner/CarrotPlanner"/-->

    <!-- local planner -->
    <!--param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/-->  
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>
    <!--param name="base_local_planner" value="eband_local_planner/EBandPlannerROS"/-->  
    <!--param name="base_local_planner" value="teb_local_planner/TEBPlannerROS"/-->  

    <!--rosparam file="$(find racecar_launch)/param/dwa_local_planner_params.yaml" command="load"/> 
    <rosparam file="$(find racecar_launch)/param/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/global_costmap_params.yaml" command="load"/> 
    <rosparam file="$(find racecar_launch)/param/base_global_planner_params.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/move_base_params.yaml" command="load"/-->

    <rosparam file="$(find racecar_launch)/param/move_base/dwa_local_planner.yaml" command="load"/> 
    <rosparam file="$(find racecar_launch)/param/move_base/NavfnROS.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/move_base/move_base.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/move_base/common_costmap.yaml" command="load" ns="global_costmap"/> 
    <rosparam file="$(find racecar_launch)/param/move_base/common_costmap.yaml" command="load" ns="local_costmap"/> 
    <rosparam file="$(find racecar_launch)/param/move_base/local_costmap.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/move_base/global_costmap.yaml" command="load"/> 
    <!--rosparam file="$(find racecar_launch)/param/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find racecar_launch)/param/global_costmap_params.yaml" command="load"/--> 
       
  </node>

</launch>
