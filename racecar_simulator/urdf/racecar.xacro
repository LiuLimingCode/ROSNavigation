<?xml version="1.0"?>

<robot name="rrbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- Chassis -->
  <link name="base_link">
    <inertial>
      <mass value="21.5"/>
      <origin xyz=" 0 0 0.1175"/>
      <inertia ixx="0.3338" ixy="0.0" ixz="0.0" iyy="0.4783" iyz="0.0" izz="0.3338"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.1175"/>
      <geometry>
        <mesh filename="package://racecar_simulator/meshes/racecar/chassis.STL" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.1175"/>
      <geometry>
        <mesh filename="package://racecar_simulator/meshes/racecar/chassis_no_antna.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="base_link">
    <material value="Gazebo/White"/>
  </gazebo>

  <!-- wheel -->
  <link name="front_left_wheel">
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01241176559" ixy="0" ixz="0" iyy="0.01521816042" iyz="0" izz="0.01176397794"/>
    </inertial>
    <visual>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
    </collision>
  </link>
  <joint name="front_left_wheel_joint" type="continuous">
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="200" velocity="200"/>
    <joint_properties damping="0.7"/>
    <origin rpy="0 0 0" xyz="0.1575 0.14 0.0675"/>
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
  </joint>
  <gazebo reference="front_left_wheel">
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <maxVel>1.0</maxVel>
    <minDepth>0.00</minDepth>
    <material value="Gazebo/White"/>
  </gazebo>

  <link name="rear_left_wheel">
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01241176559" ixy="0" ixz="0" iyy="0.01521816042" iyz="0" izz="0.01176397794"/>
    </inertial>
    <visual>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
    </collision>
  </link>
  <joint name="rear_left_wheel_joint" type="continuous">
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="200" velocity="200"/>
    <joint_properties damping="0.7"/>
    <origin rpy="0 0 0" xyz="-0.1575 0.14 0.0675"/>
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
  </joint>
  <gazebo reference="rear_left_wheel">
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <maxVel>1.0</maxVel>
    <minDepth>0.00</minDepth>
    <material value="Gazebo/White"/>
  </gazebo>

  <link name="front_right_wheel">
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01241176559" ixy="0" ixz="0" iyy="0.01521816042" iyz="0" izz="0.01176397794"/>
    </inertial>
    <visual>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
    </collision>
  </link>
  <joint name="front_right_wheel_joint" type="continuous">
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="200" velocity="200"/>
    <joint_properties damping="0.7"/>
    <origin rpy="0 0 0" xyz="0.1575 -0.14 0.0675"/>
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
  </joint>
  <gazebo reference="front_right_wheel">
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <maxVel>1.0</maxVel>
    <minDepth>0.00</minDepth>
    <material value="Gazebo/White"/>
  </gazebo>

  <link name="rear_right_wheel">
    <inertial>
      <mass value="1.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01241176559" ixy="0" ixz="0" iyy="0.01521816042" iyz="0" izz="0.01176397794"/>
    </inertial>
    <visual>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
    </collision>
  </link>
  <joint name="rear_right_wheel_joint" type="continuous">
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="200" velocity="200"/>
    <joint_properties damping="0.7"/>
    <origin rpy="0 0 0" xyz="-0.1575 -0.14 0.0675"/>
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
  </joint>
  <gazebo reference="rear_right_wheel">
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <maxVel>1.0</maxVel>
    <minDepth>0.00</minDepth>
    <material value="Gazebo/White"/>
  </gazebo>

  <!-- Laser -->
  <link name="laser_link">
   <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://racecar_simulator/meshes/racecar/laser.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://racecar_simulator/meshes/racecar/laser.STL" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>
  <joint name="laser_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.07 0 0.2575"/>
    <parent link="base_link"/>
    <child link="laser_link"/>
  </joint>
  <gazebo reference="laser_link">
    <sensor type="ray" name="art_laser">
      <pose>0 0 0.0175 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>11</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>6.283185</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.05</min>
          <max>8</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.001</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_laser_controller" filename="libgazebo_ros_laser.so">
        <topicName>/laser/scan</topicName>
        <frameName>laser_link</frameName>
      </plugin>
    </sensor>
    <material value="Gazebo/White"/>
  </gazebo>

  <!-- IMU -->
  <link name="imu_link">
   <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://racecar_simulator/meshes/racecar/imu.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://racecar_simulator/meshes/racecar/imu.STL" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.16575 0 0.168"/>
    <parent link="base_link"/>
    <child link="imu_link"/>
  </joint>
  <gazebo reference="imu_link">
    <pose>0 0 0.01 0 0 0</pose>
    <gravity>true</gravity>
    <sensor type="imu" name="art_imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>__default_topic__</topic>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <topicName>/imu/data</topicName>
        <bodyName>imu_link</bodyName>
        <updateRateHZ>100.0</updateRateHZ>
        <gaussianNoise>0.0</gaussianNoise>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>imu_link</frameName>
      </plugin>
    </sensor>
    <material value="Gazebo/White"/>
  </gazebo>

  <!-- Plugin -->
  <gazebo>
    <!--plugin filename="libgazebo_ros_skid_steer_drive.so" name="skid_steer_drive_controller">
      <updateRate>100.0</updateRate>
      <robotNamespace></robotNamespace>
      <leftFrontJoint>front_left_wheel_joint</leftFrontJoint>
      <rightFrontJoint>front_right_wheel_joint</rightFrontJoint>
      <leftRearJoint>rear_left_wheel_joint</leftRearJoint>
      <rightRearJoint>rear_right_wheel_joint</rightRearJoint>
      <wheelSeparation>0.34</wheelSeparation>
      <wheelDiameter>0.135</wheelDiameter>
      <robotBaseFrame>base_link</robotBaseFrame>
      <MaxForce>10.0</MaxForce>
      <torque>400</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <broadcastTF>1</broadcastTF>
    </plugin-->
    <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometryRate>100.0</odometryRate>
      <robotBaseFrame>base_link</robotBaseFrame>
    </plugin>
  </gazebo>

</robot>
