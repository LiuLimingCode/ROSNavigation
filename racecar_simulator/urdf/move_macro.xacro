<?xml version="1.0"?>
<robot name="racecar" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <xacro:macro name="wheel_macro" params="parent prefix xyz">
    <joint name="${prefix}_joint" type="continuous">
      <origin xyz="${xyz}" rpy="${radians(-90)} 0 0"/>
      <parent link="${parent}"/>
      <child  link="${prefix}_link"/>
      <axis xyz="0 0 1" />
      <limit velocity="200" effort="200" />
      <dynamics damping="0.1"/>
    </joint>

    <transmission name="${prefix}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_joint">
          <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_motor">
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        <mechanismReduction>1</mechanismReduction>
      </actuator>
    </transmission>

    <link name="${prefix}_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1.5"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.0675" length="0.064"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.0675" length="0.064"/>
        </geometry>
      </collision>
    </link>
    <gazebo reference="${prefix}_link">
      <material>Gazebo/White</material>
      <mu1 value="2.5" />
      <mu2 value="2.5" />
      <kp value="50000" />
      <kd value="10" />
    </gazebo>
  </xacro:macro>

  <xacro:macro name="body_macro" params="parent">
    <joint name="body_joint" type="fixed">
      <parent link="${parent}"/>
      <child  link="body_link"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="body_link">
      <inertial>
        <mass value="15.0"/>
        <origin xyz=" 0 0 0.1175"/>
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0.1175"/>
        <geometry>
          <mesh filename="package://racecar_simulator/meshes/racecar/chassis.STL" scale="0.01 0.01 0.01"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0.1175"/>
        <geometry>
          <mesh filename="package://racecar_simulator/meshes/racecar/chassis_no_antna.STL" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
    </link>
    <gazebo reference="body_link">
      <material value="Gazebo/White"/>
    </gazebo>
  </xacro:macro>
</robot>
