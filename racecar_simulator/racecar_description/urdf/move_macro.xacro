<?xml version="1.0"?>
<robot name="racecar" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- add wheel -->
  <xacro:macro name="wheel_macro" params="prefix parent xyz">
    <joint name="${prefix}_joint" type="continuous">
      <origin xyz="${xyz}" rpy="1.5708 0 0"/>
      <parent link="${parent}"/>
      <child  link="${prefix}"/>
      <axis xyz="0 0 -1" />
      <limit velocity="10" effort="1000"/>
    </joint>

    <link name="${prefix}">
      <inertial> 
        <mass value="0.34055"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.00026046" ixy="0" ixz="0" iyy="0.00026046" iyz="0" izz="0.00041226"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.0675" length="0.064"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder radius="0.0675" length="0.064"/>
        </geometry>
      </collision>
    </link>

    <transmission name="${prefix}_transmission" type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>

  <xacro:macro name="rear_wheel_macro" params="prefix parent xyz">

    <xacro:wheel_macro parent="${parent}" prefix="${prefix}" xyz="${xyz}"/>

    <gazebo reference="${prefix}_link">
      <material>Gazebo/White</material>
      <mu1 value="2.0"/>
      <mu2 value="2.0"/>
      <kp  value="10000000.0"/>
      <kd  value="1.0"/>
      <fdir1 value="1 0 0"/>
    </gazebo>

  </xacro:macro>

  <xacro:macro name="front_wheel_macro" params="prefix parent xyz">

    <xacro:wheel_macro parent="${parent}" prefix="${prefix}" xyz="${xyz}"/>

    <gazebo reference="${prefix}_link">
      <material>Gazebo/White</material>
      <mu1 value="2.0"/>
      <mu2 value="2.0"/>
      <kp  value="10000000.0"/>
      <kd  value="1.0"/>
      <fdir1 value="0 0 1"/>
    </gazebo>

  </xacro:macro>

  <!-- add hinge -->
  <xacro:macro name="steering_hinge_macro" params="prefix parent xyz">

    <joint name="${prefix}_joint" type="continuous">
      <origin xyz="${xyz}" rpy="0 1.5708 0"/>
      <parent link="${parent}"/>
      <child link="${prefix}"/>
      <axis xyz="-1 0 0"/>
      <limit lower="-1.0" upper="1.0" effort="10" velocity="1000"/>
    </joint>

    <link name="${prefix}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.100"/>
        <inertia ixx="4E-06" ixy="0" ixz="0" iyy="4E-06" iyz="0" izz="4E-06"/>
      </inertial>
    </link>

    <transmission name="${prefix}_transmission" type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>

  <!-- add body -->
  <xacro:macro name="body_macro" params="prefix parent">
    <joint name="base_link_joint" type="fixed">
      <parent link="${parent}"/>
      <child  link="${prefix}"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="${prefix}">
      <inertial>
        <mass value="10.0"/>
        <origin xyz=" 0 0 0.01"/>
        <inertia ixx="0.010609" ixy="0.0" ixz="0.0" iyy="0.050409" iyz="0.0" izz="0.05865"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0.1175"/>
        <geometry>
          <mesh filename="package://racecar_description/meshes/racecar/chassis.STL" scale="0.01 0.01 0.01"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0.1175"/>
        <geometry>
          <mesh filename="package://racecar_description/meshes/racecar/chassis_no_antna.STL" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
    </link>
    <gazebo reference="${prefix}">
      <material value="Gazebo/White"/>
      <mu1 value="0.0"/>
      <mu2 value="0.0"/>
      <kp  value="10000000.0"/>
      <kd  value="1.0"/>
    </gazebo>
  </xacro:macro>
</robot>
