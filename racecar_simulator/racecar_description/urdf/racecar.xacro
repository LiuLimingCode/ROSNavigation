<?xml version="1.0"?>

<robot name="rrbot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="robot_name" default="racecar"/>
  <xacro:arg name="enable_odom_tf" default="true"/>
  <xacro:arg name="odom_frame" default="odom"/>
  <xacro:arg name="odom_topic" default="odom"/>
  <xacro:arg name="cmd_topic" default="cmd_vel"/>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- Chassis -->
  <link name="base_link">
    <inertial>
      <mass value="10.0"/>
      <origin xyz=" 0 0 0.1175"/>
      <inertia ixx="0.010609" ixy="0.0" ixz="0.0" iyy="0.050409" iyz="0.0" izz="0.05865"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.1175"/>
      <geometry>
        <mesh filename="package://racecar_description/meshes/racecar/chassis.STL" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.1175"/>
      <geometry>
        <mesh filename="package://racecar_description/meshes/racecar/chassis_no_antna.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="base_link">
    <material value="Gazebo/White"/>
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp  value="10000000.0" />
    <kd  value="1.0" />
  </gazebo>

  <!-- rear wheel -->
  <link name="rear_left_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00026046" ixy="0" ixz="0" iyy="0.00026046" iyz="0" izz="0.00041226"/>
    </inertial>
    <visual>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
    </collision>
  </link>
  <joint name="rear_left_wheel_joint" type="continuous">
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="10" velocity="1000"/>
    <origin rpy="0 0 0" xyz="-0.1575 0.14 0.0675"/>
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
  </joint>
  <gazebo reference="rear_left_wheel">
    <material>Gazebo/White</material>
    <mu1 value="2.0"/>
    <mu2 value="2.0"/>
    <kp  value="10000000.0" />
    <kd  value="1.0" />
    <fdir1 value="1 0 0"/>
  </gazebo>
  <transmission name="rear_left_wheel_transmission" type="SimpleTransmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="rear_left_wheel_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="rear_left_wheel_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <link name="rear_right_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00026046" ixy="0" ixz="0" iyy="0.00026046" iyz="0" izz="0.00041226"/>
    </inertial>
    <visual>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
    </collision>
  </link>
  <joint name="rear_right_wheel_joint" type="continuous">
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="10" velocity="1000"/>
    <joint_properties damping="0.7"/>
    <origin rpy="0 0 0" xyz="-0.1575 -0.14 0.0675"/>
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
  </joint>
  <gazebo reference="rear_right_wheel">
    <material>Gazebo/White</material>
    <mu1 value="2.0"/>
    <mu2 value="2.0"/>
    <kp  value="10000000.0" />
    <kd  value="1.0" />
    <fdir1 value="1 0 0"/>
  </gazebo>
  <transmission name="rear_right_wheel_transmission" type="SimpleTransmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="rear_right_wheel_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="rear_right_wheel_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- steering hinge and front wheel -->
  <link name="right_steering_hinge_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.100"/>
      <inertia ixx="4E-06" ixy="0" ixz="0" iyy="4E-06" iyz="0" izz="4E-06"/>
    </inertial>
  </link>
  <joint name="right_steering_hinge_joint" type="continuous">
    <origin xyz="0.1575 -0.14 0.0675" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="right_steering_hinge_joint"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.0" upper="1.0" effort="10" velocity="1000"/>
  </joint>
  <transmission name="right_steering_hinge_transmission" type="SimpleTransmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_steering_hinge_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_steering_hinge_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <link name="left_steering_hinge_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.100"/>
      <inertia ixx="4E-06" ixy="0" ixz="0" iyy="4E-06" iyz="0" izz="4E-06"/>
    </inertial>
  </link>
  <joint name="left_steering_hinge_joint" type="continuous">
    <origin xyz="0.1575 0.14 0.0675" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="left_steering_hinge_joint"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.0" upper="1.0" effort="10" velocity="1000"/>
  </joint>
  <transmission name="left_steering_hinge_transmission" type="SimpleTransmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_steering_hinge_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_steering_hinge_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <link name="front_right_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00026046" ixy="0" ixz="0" iyy="0.00026046" iyz="0" izz="0.00041226"/>
    </inertial>
    <visual>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
    </collision>
  </link>
  <joint name="front_right_wheel_joint" type="continuous">
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="10" velocity="1000"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="right_steering_hinge_joint"/>
    <child link="front_right_wheel"/>
  </joint>
  <gazebo reference="front_right_wheel">
    <material>Gazebo/White</material>
    <mu1 value="2.0"/>
    <mu2 value="2.0"/>
    <kp  value="10000000.0" />
    <kd  value="1.0" />
    <fdir1 value="0 0 1"/>
  </gazebo>
  <transmission name="front_right_wheel_transmission" type="SimpleTransmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="front_right_wheel_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="front_right_wheel_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <link name="front_left_wheel">
    <inertial>
      <mass value="0.34055"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00026046" ixy="0" ixz="0" iyy="0.00026046" iyz="0" izz="0.00041226"/>
    </inertial>
    <visual>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin rpy="-1.5707 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.0675" length="0.064"/>
      </geometry>
    </collision>
  </link>
  <joint name="front_left_wheel_joint" type="continuous">
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="10" velocity="1000"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="left_steering_hinge_joint"/>
    <child link="front_left_wheel"/>
  </joint>
  <gazebo reference="front_left_wheel">
    <material>Gazebo/White</material>
    <mu1 value="2.0"/>
    <mu2 value="2.0"/>
    <kp  value="10000000.0" />
    <kd  value="1.0" />
    <fdir1 value="0 0 1"/>
  </gazebo>
  <transmission name="front_left_wheel_transmission" type="SimpleTransmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="front_left_wheel_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="front_left_wheel_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- Laser -->
  <link name="laser_link">
    <inertial>
      <mass value="0.130" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="4E-06" ixy="0" ixz="0" iyy="4E-06" iyz="0" izz="4E-06" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://racecar_description/meshes/racecar/laser.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://racecar_description/meshes/racecar/laser.STL" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>
  <joint name="laser_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.07 0 0.2575"/>
    <parent link="base_link"/>
    <child link="laser_link"/>
  </joint>
  <gazebo reference="laser_link">
    <sensor type="ray" name="art_laser">
      <pose>0 0 0.0175 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>11</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>6.283185</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.05</min>
          <max>8</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.001</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_laser_controller" filename="libgazebo_ros_laser.so">
        <topicName>/laser/scan</topicName>
        <frameName>laser_link</frameName>
      </plugin>
    </sensor>
    <material value="Gazebo/White"/>
  </gazebo>

  <!-- IMU -->
  <link name="imu_link">
   <inertial>
      <mass value="0.130" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="4E-06" ixy="0" ixz="0" iyy="4E-06" iyz="0" izz="4E-06" />
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://racecar_description/meshes/racecar/imu.STL" scale="0.01 0.01 0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://racecar_description/meshes/racecar/imu.STL" scale="0.01 0.01 0.01"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>
  <joint name="imu_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.16575 0 0.168"/>
    <parent link="base_link"/>
    <child link="imu_link"/>
  </joint>
  <gazebo reference="imu_link">
    <pose>0 0 0.01 0 0 0</pose>
    <gravity>true</gravity>
    <sensor type="imu" name="art_imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <topic>__default_topic__</topic>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <topicName>/imu/data</topicName>
        <bodyName>imu_link</bodyName>
        <updateRateHZ>100.0</updateRateHZ>
        <gaussianNoise>0.0</gaussianNoise>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>imu_link</frameName>
      </plugin>
    </sensor>
    <material value="Gazebo/White"/>
  </gazebo>

  <!-- Plugin -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/racecar</robotNamespace>
       <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
      <legacyModeNS>true</legacyModeNS>
    </plugin>
    <!--plugin name="object_controller" filename="libgazebo_ros_planar_move_drive.so">
      <commandTopic>$(arg cmd_topic)</commandTopic>
      <odometryTopic>$(arg odom_topic)</odometryTopic>
      <odometryFrame>$(arg odom_frame)</odometryFrame>
      <odometryRate>100.0</odometryRate>
      <robotBaseFrame>base_link</robotBaseFrame>
      <broadcastTF>$(arg enable_odom_tf)</broadcastTF>
    </plugin-->
  </gazebo>

</robot>
